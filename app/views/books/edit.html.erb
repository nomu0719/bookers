<body class='<%= controller.controller_name %>' >
  <main>
    <h1>Editing Book</h1>
    <%= form_with model:@book, local: true do |f| %>
    
    
   <%= render 'layouts/error_massages', book: @book %>
    <h6>Title</h6>
    
    <%= f.text_field :title %>
    <h6>body</h6>
     <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
    <br>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
    <% end %>
    <%= yield %>
   </main>
</body>