<body class='<%= controller.controller_name %>' >
<main>
 <h1>Books</h1>

  <div class="blog">
    <div class="blog-heading">
      <h4>Title</h4>
      <h4>Body</h4>
     <h4></h4>
    </div>
    <div class="blog-main">
      <% @books.each do |book| %>
      <div class="blog-item">
       <div> <p class="blog-title"><%=  book.title  %></p></div>
        <div><p class="blog-body"><%=  book.body %></p></div>
        <div> <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to 'Destroy',book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></div>
         </div>
        <% end %>
        
    </div>
    
  </div>
  <h2>New book</h2>
  <%= form_with model: @book, url:'/books', local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>body</h4>
   <%= f.text_area :body %>
   <%= f.submit 'Create Book'%>
  <% end %>
  
  
  <%= yield %>
</main>
</body>
 